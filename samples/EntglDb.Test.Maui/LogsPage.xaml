<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EntglDb.Test.Maui.LogsPage"
             Title="Logs">
    <Grid RowDefinitions="Auto, *">
        <HorizontalStackLayout Spacing="10" Padding="10">
            <Button Text="Clear" Clicked="OnClearClicked" />
            <Label x:Name="StatusLabel" Text="Listening..." VerticalOptions="Center" />
        </HorizontalStackLayout>
        
        <CollectionView Grid.Row="1" x:Name="LogsCollectionView" ItemsSource="{Binding Logs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Formatted}" TextColor="{Binding Color}" FontSize="12" Margin="5,2" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
