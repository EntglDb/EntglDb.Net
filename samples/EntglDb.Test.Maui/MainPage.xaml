<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EntglDb.Test.Maui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto, *">
        <!--  Header  -->
        <Frame
            Grid.Row="0"
            Padding="15"
            BackgroundColor="#f0f0f0"
            CornerRadius="0"
            HasShadow="False">
            <HorizontalStackLayout Spacing="20">
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="EntglDb Dashboard"
                    VerticalOptions="Center" />
                <Label
                    x:Name="NodeIdLabel"
                    Text="Node: Loading..."
                    VerticalOptions="Center" />
                <Label
                    x:Name="PortLabel"
                    Text="Port: ..."
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Frame>

        <Grid
            Grid.Row="1"
            Margin="10"
            ColumnDefinitions="250, *">
            <!--  Left Side: Actions  -->
            <VerticalStackLayout
                Grid.Column="0"
                Margin="0,0,10,0"
                Spacing="10">
                <Label
                    Margin="0,0,0,5"
                    FontAttributes="Bold"
                    Text="Actions" />

                <Frame
                    Padding="10"
                    BorderColor="#e0e0e0"
                    CornerRadius="4">
                    <VerticalStackLayout Spacing="5">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="Manual Entry" />
                        <Entry x:Name="KeyEntry" Placeholder="Key" />
                        <Entry x:Name="ValueEntry" Placeholder="Value" />
                        <Grid ColumnDefinitions="*,*">
                            <Button
                                Margin="0,0,2,0"
                                Clicked="OnSaveClicked"
                                HorizontalOptions="Fill"
                                Text="Put" />
                            <Button
                                Grid.Column="1"
                                Margin="2,0,0,0"
                                Clicked="OnLoadClicked"
                                HorizontalOptions="Fill"
                                Text="Get" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Button
                    Clicked="OnAutoDataClicked"
                    HorizontalOptions="Fill"
                    Text="Generate Auto Data" />
                <Button
                    Clicked="OnSpamClicked"
                    HorizontalOptions="Fill"
                    Text="Spam 5 Records" />
                <Button
                    Clicked="OnCountClicked"
                    HorizontalOptions="Fill"
                    Text="Count Documents" />

                <Label
                    Margin="0,10,0,5"
                    FontAttributes="Bold"
                    Text="Status" />
                <Label
                    x:Name="StatusLabel"
                    LineBreakMode="WordWrap"
                    Text="Ready"
                    TextColor="Green" />
            </VerticalStackLayout>

            <!--  Right Side: Peers & Results  -->
            <Grid Grid.Column="1" RowDefinitions="*, 5, *">

                <!--  Peers List  -->
                <Frame
                    Grid.Row="0"
                    Padding="5"
                    BorderColor="#e0e0e0"
                    CornerRadius="4">
                    <Grid RowDefinitions="Auto, *">
                        <Label
                            Margin="5"
                            FontAttributes="Bold"
                            Text="Active Peers (Discovery)" />
                        <CollectionView x:Name="PeersList" Grid.Row="1">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Label Padding="5" Text="{Binding .}" />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Frame>

                <!--  Splitter Simulation  -->
                <BoxView Grid.Row="1" Color="#e0e0e0" />

                <!--  Results Log  -->
                <Frame
                    Grid.Row="2"
                    Padding="5"
                    BorderColor="#e0e0e0"
                    CornerRadius="4">
                    <Grid RowDefinitions="Auto, *">
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                Margin="5"
                                FontAttributes="Bold"
                                Text="Logs &amp; Results" />
                            <Button
                                Padding="5,0"
                                Clicked="OnClearLogsClicked"
                                FontSize="10"
                                HeightRequest="30"
                                Text="Clear" />
                        </HorizontalStackLayout>
                        <Editor
                            x:Name="ResultLog"
                            Grid.Row="1"
                            IsReadOnly="True" />
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
